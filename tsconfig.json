{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["app/*"],
      "@/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@module/*": ["app/modules/*"]
    },
    "removeComments": false
  },
  "include": [
    "app/tests/**/*.ts",
    "app/**/*.ios.ts",
    "app/**/*.android.ts"],

  "files": [
    "./app/main.ts",
    "./references.d.ts",
    "./app/polyfills.ts",
    "./app\\polyfills.ts"
  ],
  "exclude": [
    "node_modules",
    "platforms",
    "e2e"
  ]
}
